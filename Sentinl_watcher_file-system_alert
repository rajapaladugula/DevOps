      "script": "payload.hosts = payload.aggregations.hosts.buckets.map(bucket => { return bucket.key }).join(', '); payload.filesystem = payload.aggregations.hosts.buckets.map(bucket => {return bucket.values_avg.value.toFixed(4)*100 + '%' }).join(', '); payload.device_name = payload.hits.hits.map(hit => {return hit._source.system.filesystem.device_name;}).join(', ').replace('/', '.');"
